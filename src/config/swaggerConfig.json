{
  "openapi": "3.0.0",
  "info": {
    "title": "API TIREITU",
    "description": "TireiTU é um app que gerencia amigos secretos",
    "contact": {
      "email": "denisonfer.dev@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "API DE DESENVOLVIMENTO"
    },
    {
      "url": "http://localhost:3000/",
      "description": "API DE PRODUÇÃO"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Deve cadastrar um usuário",
        "tags": ["users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "fulano",
                    "email": "fulano@email.com",
                    "password": "123456",
                    "device_id": "8asdf6adsf6as98d7f6s8d6"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Já existe um usuário com este e-mail"
          },
          "200": {
            "description": "Usuário salvo com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "post": {
        "summary": "Login do usuário",
        "description": "Deve iniciar a sessão do usuário",
        "tags": ["users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "fulano@email.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Credenciais inválidas"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/groups": {
      "get": {
        "summary": "Lista todos os grupos do usuário",
        "description": "Deve retornar todos os grupos onde o usuário está incluído",
        "tags": ["Groups"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Credenciais inválidas"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "device_id": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
